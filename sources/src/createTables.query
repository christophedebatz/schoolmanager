create table courses (course_id int primary key generated always as identity (start with 0, increment by 1), course_name char(50) unique, course_option smallint)
create table majors (major_id int primary key generated always as identity (start with 0, increment by 1), major_name char(50) unique)
create table majors_courses (corresp_id int primary key generated always as identity (start with 0, increment by 1), major_id int, course_id int)
create table grades (grade_id int primary key generated always as identity (start with 0, increment by 1), grade_mark int, course_id int)
create table students (student_id int primary key generated always as identity (start with 0, increment by 1), student_name char(50), student_surname char(50), unique(student_name, student_surname))
create table students_grades (corresp_id int primary key generated always as identity (start with 0, increment by 1), grade_id int, student_id int)
create table teachers (teacher_id int primary key generated always as identity (start with 0, increment by 1), teacher_name char(50), teacher_surname char(50), unique(teacher_name, teacher_surname))
create table teachers_courses (corresp_id int primary key generated always as identity (start with 0, increment by 1), teacher_id int, course_id int)
create table tutors_students (corresp_id int primary key generated always as identity (start with 0, increment by 1), teacher_id int, student_id int)